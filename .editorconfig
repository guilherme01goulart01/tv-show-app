# Define as configurações globais para todos os arquivos
root = true

[*]
indent_style = space        # Usa espaços para indentação
indent_size = 2             # Define o tamanho da indentação como 2 espaços
end_of_line = lf            # Usa 'lf' como caractere de fim de linha
charset = utf-8             # Define a codificação como UTF-8
trim_trailing_whitespace = true  # Remove espaços em branco no final das linhas
insert_final_newline = true      # Adiciona uma nova linha no final do arquivo

# Exceções para arquivos Markdown
[*.md]
trim_trailing_whitespace = false # Mantém os espaços em branco no final das linhas em arquivos .md

# Configurações específicas para arquivos JSON (package.json, bower.json)
[{package,bower}.json]
indent_style = space        # Usa espaços para indentação
indent_size = 2             # Define o tamanho da indentação como 2 espaços
